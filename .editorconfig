root = true

[*]
charset = utf-8
tab_width = 4
indent_size = 4
end_of_line = lf
indent_style = space
max_line_length = 120
insert_final_newline = false

[*.{bash,sh,zsh}]
tab_width = 2
indent_size = 2

[*.{html,sass,scss,js,json}]
tab_width = 2
indent_size = 2

[*.{yml,yaml}]
tab_width = 2
indent_size = 2

[*.md]
insert_final_newline = true
trim_trailing_whitespace = false
